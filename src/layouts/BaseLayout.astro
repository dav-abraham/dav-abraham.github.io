---
import '../styles/global.css';
---
<html lang="pt" class="scroll-smooth">
<head>
    <meta charset="UTF-8" /><title>David Abraham</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;900&display=swap" rel="stylesheet">
    <style>
        @keyframes introReveal {
            0% { opacity: 0; transform: translateY(20px) scale(0.9); filter: blur(10px); }
            100% { opacity: 1; transform: translateY(0) scale(1); filter: blur(0); }
        }
        @keyframes introExit {
            0% { opacity: 1; }
            100% { opacity: 0; visibility: hidden; }
        }
        .animate-intro-text {
            animation: introReveal 1.2s cubic-bezier(0.16, 1, 0.3, 1) forwards;
        }
        .intro-container-exit {
            animation: introExit 0.8s ease forwards;
            animation-delay: 2.2s;
        }
    </style>
</head>
<body class="bg-[#050505] text-white antialiased overflow-x-hidden">
    <div id="intro" class="fixed inset-0 z-[100] bg-black flex items-center justify-center overflow-hidden intro-container-exit">
        <h1 class="text-5xl md:text-8xl font-black tracking-tighter uppercase animate-intro-text">
            David Abraham
        </h1>
    </div>

    <nav id="navbar" class="fixed top-0 w-full z-50 transition-all duration-500 py-6 px-10 flex justify-between items-center">
        <span class="font-black text-xl tracking-tighter uppercase italic">David Abraham</span>
        
        <div class="flex items-center gap-8">
            <div class="hidden md:flex gap-6 text-[10px] font-black uppercase tracking-[0.2em] text-zinc-400">
                <a href="#projetos" class="hover:text-white transition-colors" data-pt="Projetos" data-en="Projects">Projetos</a>
                <a href="#contato" class="hover:text-white transition-colors" data-pt="Contato" data-en="Contact">Contato</a>
            </div>

            <div class="flex gap-2 glass p-1 rounded-full border border-white/10 bg-zinc-900/50 backdrop-blur-xl">
                <button onclick="changeLang('pt')" id="btn-pt" class="px-4 py-2 rounded-full text-[9px] font-black transition-all bg-white text-black">PT</button>
                <button onclick="changeLang('en')" id="btn-en" class="px-4 py-2 rounded-full text-[9px] font-black transition-all text-zinc-500">EN</button>
            </div>
        </div>
    </nav>

    <slot />

    <script is:inline>
        // Controle de Intro
        const intro = document.getElementById('intro');
        if (sessionStorage.getItem('introPlayed')) {
            intro.style.display = 'none';
        } else {
            sessionStorage.setItem('introPlayed', 'true');
            setTimeout(() => { intro.style.display = 'none'; }, 3000);
        }

        // Navbar Camaleão no Scroll
        window.addEventListener('scroll', () => {
            const nav = document.getElementById('navbar');
            if (window.scrollY > 50) {
                nav.classList.add('bg-black/90', 'backdrop-blur-xl', 'py-4', 'border-b', 'border-white/5');
            } else {
                nav.classList.remove('bg-black/90', 'backdrop-blur-xl', 'py-4', 'border-b', 'border-white/5');
            }
        });

        // Tradução Instantânea (Resolve o problema do Inglês)
        window.changeLang = (lang) => {
            document.querySelectorAll('[data-pt]').forEach(el => {
                el.innerText = lang === 'en' ? el.getAttribute('data-en') : el.getAttribute('data-pt');
            });
            // Atualiza botões
            const btnPt = document.getElementById('btn-pt');
            const btnEn = document.getElementById('btn-en');
            if (lang === 'en') {
                btnEn.className = 'px-4 py-2 rounded-full text-[9px] font-black transition-all bg-white text-black';
                btnPt.className = 'px-4 py-2 rounded-full text-[9px] font-black transition-all text-zinc-500';
            } else {
                btnPt.className = 'px-4 py-2 rounded-full text-[9px] font-black transition-all bg-white text-black';
                btnEn.className = 'px-4 py-2 rounded-full text-[9px] font-black transition-all text-zinc-500';
            }
        };
    </script>
</body>
</html>
