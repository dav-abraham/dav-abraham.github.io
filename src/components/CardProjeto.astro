---
const { titulo, descricao, imagem = "/projeto-placeholder.jpg" } = Astro.props;
---
<div class="card">
    <div class="foto" style={`background-image: url('${imagem}')`}></div>
    <div class="conteudo">
        <h3>{titulo}</h3>
        <p>{descricao}</p>
    </div>
</div>

<style>
    .card {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        overflow: hidden;
        backdrop-filter: blur(10px);
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }
    .card:hover {
        transform: translateY(-10px);
        border-color: var(--accent);
        background: rgba(255, 255, 255, 0.07);
    }
    .foto {
        height: 220px;
        background-size: cover;
        background-position: center;
        background-color: #1a2a41;
    }
    .conteudo {
        padding: 1.5rem;
    }
    h3 { margin: 0 0 0.5rem 0; color: white; }
    p { margin: 0; color: #a0aec0; font-size: 0.9rem; line-height: 1.5; }
</style>
